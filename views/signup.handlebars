<form id="signup-form" class="mt-5 mb-5">
  <div class="mb-3">
    <label for="email-signup" class="form-label">Email Address</label>
    <input
      type="text"
      id="email-signup"
      class="form-control"
      aria-describedby="emailHelp"
    />
  </div>
  <div class="mb-3">
    <label for="password-signup" class="form-label">Password</label>
    <input type="password" id="password-signup" class="form-control" />
  </div>
  <div>
    <button class="btn btn-outline-dark" type="submit">Signup</button>
  </div>
</form>
<script src="/js/signup.js"></script>